{
  "name": "lithe-middleware",
  "version": "0.0.7",
  "type": "module",
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "types": "dist/esm/main.d.ts",
  "scripts": {
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "pnpm build:cjs && pnpm build:esm",
    "format": "npx prettier . --write",
    "lint": "tsc --noEmit && eslint src --fix",
    "test": "pnpm build && c8 ava src/*.test.ts src/*/*.test.ts && c8 report > coverage.txt",
    "test:watch": "nodemon -x 'pnpm test'"
  },
  "keywords": [
    "design patterns",
    "middleware",
    "responsibility chain"
  ],
  "author": "Andre Vale <andreventuravale@gmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/andreventuravale/lithe-middleware"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "ava": "^6.1.2",
    "c8": "^9.1.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "testdouble": "^3.20.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "./dist/**/main.d.ts",
    "./dist/**/main.js.map",
    "./dist/**/main.js",
    "./dist/**/types.d.ts",
    "./dist/**/types.js.map",
    "./dist/**/types.js"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/main.d.ts",
        "default": "./dist/cjs/main.js"
      },
      "import": {
        "types": "./dist/esm/main.d.ts",
        "default": "./dist/esm/main.js"
      }
    }
  },
  "ava": {
    "typescript": {
      "compile": false,
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "dist/esm/"
      }
    }
  },
  "dependencies": {
    "immer": "^10.0.3"
  }
}
