{
  "name": "lithe-middleware",
  "version": "0.0.8",
  "type": "module",
  "main": "dist/cjs/main.js",
  "module": "dist/esm/main.js",
  "types": "dist/esm/main.d.ts",
  "scripts": {
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "pnpm build:cjs && pnpm build:esm",
    "format": "clear && biome check --quote-style=single --semicolons=as-needed --arrow-parentheses=as-needed --json-formatter-indent-style=space --apply-unsafe .",
    "lint": "clear && biome lint .",
    "test:watch": "jest --coverage --watch",
    "test": "jest --coverage"
  },
  "keywords": ["design patterns", "middleware", "responsibility chain"],
  "author": "Andre Vale <andreventuravale@gmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/andreventuravale/lithe-middleware"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@swc/core": "^1.4.6",
    "@swc/jest": "^0.2.36",
    "@types/node": "^20.11.26",
    "esbuild": "^0.19.5",
    "jest": "^29.7.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.5",
    "testdouble": "^3.20.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "./dist/**/main.d.ts",
    "./dist/**/main.js.map",
    "./dist/**/main.js",
    "./dist/**/types.d.ts",
    "./dist/**/types.js.map",
    "./dist/**/types.js"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/main.d.ts",
        "default": "./dist/cjs/main.js"
      },
      "import": {
        "types": "./dist/esm/main.d.ts",
        "default": "./dist/esm/main.js"
      }
    }
  },
  "ava": {
    "typescript": {
      "compile": false,
      "extensions": ["ts"],
      "rewritePaths": {
        "src/": "dist/esm/"
      }
    }
  },
  "dependencies": {
    "immer": "^10.0.4"
  }
}
